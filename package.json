{
  "name": "kddi-landing",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "@testing-library/user-event": "^12.2.0",
    "chokidar-cli": "^2.1.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "react-table": "^7.6.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "build:tailwind": "postcss src/styles/tailwind.scss -o src/styles/index.scss",
    "watch:tailwind": "chokidar 'src/styles/tailwind.scss' 'src/styles/tailwind.scss' --ignore src/styles/tailwind.scss -c 'npm run build:tailwind'",
    "start": "npm-run-all build:tailwind --parallel watch:tailwind start:react",
    "start:react": "react-scripts start",
    "prebuild": "run-s build:tailwind",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.0.2",
    "babel-plugin-react-html-attrs": "^3.0.5",
    "postcss-cli": "^8.2.0",
    "tailwindcss": "^1.9.6"
  }
}
